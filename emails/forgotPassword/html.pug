doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
table(role='presentation' align='center' border='0' cellpadding='0' cellspacing='0' width='100%' style='max-width: 520px; margin: auto;')
  tr
    td(style='padding: 20px;')
      table(role='presentation' border='0' cellpadding='0' cellspacing='0' width='100%')
        tr
          td(style="background: url(host/images/banner.png); background-size: cover;height: 150px;text-align: center;")
            a(href='#')
              img(src=`${host}/images/logo.png` width='100' height='100' alt='Logo' style='margin: 0; padding: 30px 20px;')
        tr
          td(style='background-color: #fff; padding: 30px; border-radius: 8px;text-align: center;')
            h1(style='font-size: 36px; font-weight: 700; color: #fd6d2e; margin: 0;') Hello! #{data.name}
            p(style='font-size: 18px; font-weight: 500; line-height: 1.6;') Please use the following One-Time Password (OTP) to change your password.
            table(role='presentation' border='0' cellpadding='0' cellspacing='0' width='100%' style='margin-top: 20px;')
              tr
                td(align='center' style='background-color: #fd6d2e; color: #fff; font-size: 24px; font-weight: 700; padding: 12px 24px; border-radius: 4px; letter-spacing: 5px;') #{data.otp}
            p(style='font-size: 16px; font-weight: 400; margin-top: 20px;') This OTP is valid for 5 minutes or 1 successful attempt, whichever is earlier.
            p(style='font-size: 16px; font-weight: 400;') Please do not share this OTP with anyone.
        tr
          td(style='background-color:#891653;padding:16px;text-align:center')
            p(style='font-size: 12px; color: #ffffff; margin: 0;') With Regards,
            p(style='font-size: 14px; font-weight: 700; color: #ffffff; margin: 5px 0;') Listitup
            p(style='font-size: 12px; color: #ffffff; margin-top: 16px;') Copyright &copy; 2024 | Listitup
            div(style='margin-top: 12px;')
              a(href='#' target='_blank' style='margin-right: 11px;')
                img(src=`${host}/images/fb.png` width='26' height='26' alt='Facebook')
              a(href='#' target='_blank' style='margin-right: 11px;')
                img(src=`${host}/images/linkedin.png` width='26' height='26' alt='LinkedIn')
              a(href='#' target='_blank')
                img(src=`${host}/images/insta.png` width='26' height='26' alt='Instagram')
